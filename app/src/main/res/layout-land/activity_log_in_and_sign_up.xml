<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignUp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_30"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="225dp"
            android:layout_height="165dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:src="@drawable/billbuddy_logo_nobg" />

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:layout_alignStart="@id/btnsignup"
            android:layout_above="@id/btnsignup"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="@string/login"
            android:backgroundTint="@color/green_2"/>

        <Button
            android:id="@+id/btnsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/logo"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="@dimen/dp_30"
            android:backgroundTint="@color/green_2"
            android:text="@string/signup" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnsignwithgoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnsignup"
            android:layout_alignLeft="@id/btnsignup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/rounded_button_background"
            android:text="Sign in with Google" />


    </RelativeLayout>

</RelativeLayout>
